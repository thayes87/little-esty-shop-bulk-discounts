<h1>Merchant Dashboard</h1>

<h2><%= @merchant.name %></h2>

<%= link_to "My Items", merchant_items_path(@merchant) %>
<%= link_to "My Invoices", merchant_invoices_path(@merchant) %>

<section id="top_customers">
  <h2>Top Customers: </h2>
  <ol>
    <% @customers.each do |customer| %>
     <li id="customer_<%= "#{customer.id}" %>"> <%= customer.first_name %> <%= customer.last_name %> - <%= customer.number_transactions %> purchases </li>
    <% end %>
  </ol>
</section>

<section id="items_ready_to_ship">
  <h2>Items Ready to Ship: </h2>
    <% @items.each do |item| %>
     <div id="item_<%= "#{item.id}" %>"> <%= item.name %> - <%= link_to "Invoice ##{item.invoice_id}", merchant_invoice_path(@merchant, item.invoice_id) %> - <%= item.invoice_date.strftime("%A, %B %e, %Y") %></div>
    <% end %>
</section>

<section id="bulk_discounts">
  <%= link_to "Bulk Discounts", merchant_bulk_discounts_path(@merchant) %></p>
</section>
